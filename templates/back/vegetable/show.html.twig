{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="text-center mt-4">Vegetable n° {{ vegetable.id }} : {{ vegetable.title }}</h1>
        <div>
            <div>
                <div class="d-flex justify-content-between">
                    <div>
                        <a href="{{ path('app_back_vegetable_index') }}" type="button" class="btn custom-btn-add">Retour à la liste</a>
                    </div>
                    <div class="d-flex">
                        <a href="{{ path('app_back_vegetable_update', {'id': vegetable.id}) }}" type="button" class="btn custom-btn-warning">Modifier</a>
                        <div style="margin-right: 10px;"></div>
                        {{ include('back/vegetable/_delete_form.html.twig') }}
                    </div>
                </div>
                    <table class="table table-striped table-bordered table-responsive mt-4">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ vegetable.id }}</td>
                            </tr>
                            <tr>
                                <th>Titre</th>
                                <td>{{ vegetable.title }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ vegetable.description }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>{{ vegetable.image }}</td>
                            </tr>
                            <tr>
                                <th>Bénéfices</th>
                                <td>{{ vegetable.benefits }}</td>
                            </tr>
                            <tr>
                                <th>Local</th>
                                <td>{{ vegetable.local ? 'Oui' : 'Non '}}</td>
                            </tr>
                            <tr>
                                <th>Conservation</th>
                                <td>{{ vegetable.conservation }}</td>
                            </tr>
                            <tr>
                                <th>Genre</th>
                                <td>{{ genre.name }}</td>
                            </tr>
                            <tr>
                                <th>Identité en botanique</th>
                                <td>{{ botanical.name }}</td>
                            </tr>
                            <tr>
                                <th>Mois associés</th>
                                <td>
                                    {% for month in vegetable.months %}
                                        {{ month.name }}
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>Fruit ou légume racine</th>
                                <td>{{ ingredient.name }}</td>
                            </tr>
                            <tr>
                                <th>Created_at</th>
                                <td>{{ vegetable.createdAt ? vegetable.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Updated_at</th>
                                <td>{{ vegetable.updatedAt ? vegetable.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        
        </div>
    </div>
{% endblock %}