{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <div class="container my-4 w-75">
        <h1 class="text-center mt-4">Ingredient : {{ ingredient.name }}</h1>
        <div class="d-flex justify-content-between">
            <a href="{{ path('app_back_ingredient_index') }}" class="btn custom-btn-add">Liste des ingredients</a>
            <a href="{{ path('app_back_ingredient_update', {'id': ingredient.id}) }}" class="btn custom-btn-warning">Modifier</a>
        </div>
        <table class="table table-striped table-bordered table-responsive mt-4">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ingredient.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ ingredient.name }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ ingredient.createdAt ? ingredient.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ ingredient.updatedAt ? ingredient.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}