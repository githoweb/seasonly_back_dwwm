{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <div>
        <h1 class="text-center mt-4">Liste des recettes</h1>
        <div class="container my-4">
        <a class="btn custom-btn-add" href="{{ path('app_back_recipe_create') }}">Nouvelle recette</a>
            <table class="table table-striped table-bordered table-responsive mt-4">
                <thead class="custom-thead">
                    <tr class="text-center">
                        <th scope="col">Id</th>
                        <th scope="col">Titre</th>
                        <th scope="col">DÃ©tail</th>
                        <th scope="col">Modification</th>
                    </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr class="text-center">
                        <td scope="row">{{ recipe.id }}</td>
                        <td>{{ recipe.title }}</td>
                        <td>
                            <a href="{{ path('app_back_recipe_show', {'id': recipe.id}) }}" class="btn btn-sm custom-btn-add">Voir plus</a>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('app_back_recipe_update', {'id': recipe.id}) }}" class="btn btn-sm custom-btn-warning">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}