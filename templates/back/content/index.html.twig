{% extends 'base.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}
    <h1>Content index</h1>

    <table class="table">
        <thead class="custom-thead">
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>ingredient</th>
                <th>measure</th>
                <th>Recette</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.quantity }}</td>
                <td>{{ content.ingredient.name }}</td>
                <td>{{ content.measure.type }}</td>
                <td>{{ content.recipe.title }}</td>
                <td>
                    <a href="{{ path('app_back_content_show', {'id': content.id}) }}">show</a>
                    <a href="{{ path('app_back_content_update', {'id': content.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_content_create') }}">Create new</a>
{% endblock %}
