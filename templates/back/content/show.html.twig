{% extends 'base.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <h1>Content</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ content.quantity }}</td>
            </tr>
            <tr>
                <th>Recette</th>
                <td>{{ content.recipe.title }}</td>
            </tr>
            <tr>
                <th>Measure</th>
                <td>{{ content.measure.type }}</td>
            </tr>
            <tr>
                <th>Ingredient</th>
                <td>{{ content.ingredient.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_content_index') }}">back to list</a>

    <a href="{{ path('app_back_content_update', {'id': content.id}) }}">edit</a>

